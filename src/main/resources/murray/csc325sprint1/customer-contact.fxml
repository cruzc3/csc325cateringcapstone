      <Label fx:id="yourUsernameLabel" layoutX="10.0" layoutY="37.0" prefHeight="32.0" prefWidth="182.0" text="Your Username:" textFill="#8a8a8a">
         <font>
            <Font size="21.0" />
         </font>
      </Label>
        <Button fx:id="goBackButton" layoutX="14.0" layoutY="360.0" mnemonicParsing="false" onAction="#handleGoBackButton" prefHeight="27.0" prefWidth="65.0" style="-fx-background-color: #DCDBDB; -fx-border-color: #000000;" text="Back" />
    </children>
</AnchorPane>
