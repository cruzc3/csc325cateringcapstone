<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="murray.csc325sprint1.OrderController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="400.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="0.0">
                            <children>
                                <Label text="C" textFill="#ff6347">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                                <Label text="A" textFill="#4caf50">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                                <Label text="K" textFill="#2196f3">
                                    <font>
                                        <Font name="System Bold" size="32.0" />
                                    </font>
                                </Label>
                            </children>
                        </HBox>
                        <Label text="Catering" textFill="#666666">
                            <font>
                                <Font name="System Italic" size="24.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets left="20.0" />
                    </padding>
                </VBox>
                <VBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="400.0">
                    <children>
                        <Label text="Place an Order" textFill="#888888">
                            <font>
                                <Font size="32.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets right="20.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white; -fx-border-color: #CCCCCC;" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="menuContainer" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white;" spacing="10">
                    <children>
                        <!-- Menu items will be added dynamically -->
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="60.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="homeBtn" mnemonicParsing="false" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/home_icon.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="cartBtn" mnemonicParsing="false" onAction="#showOrderDetails" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/cart_icon.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>